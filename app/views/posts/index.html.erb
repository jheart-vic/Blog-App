<div class='showPosts'
  <div class='post'>
    <div class='user-in-post'>
    <div class='header-in-post'>
          <p class='img'>
            <img  src="<%= @user.photo %>" width="100" height="100" alt="Profile picture">
          </p>
          <div class='main'>
            <h1 class='name'> <%= @user.name %> </h1>
            <span>
              <%= render layout: "shared/tag" do %>
                <p> Number of posts: <%= @user.posts_counter %> </p>
              <% end %>
            </span> 
          </div>
        </div>
      <div class='posts'>
        <% @posts.each do |post|%>
          <p class='post-num'> Post#<%= post.id%> <p>
          <div class='eachPost'> 
            <%= render post %>
             <%= render partial: 'shared/comment', collection: post.five_last_comments %>
          </div>
        <%end%>
      </div>
      <div class='link'>
        <a>
          Pagination
        </a>
      </div>
  </div>
</div>
