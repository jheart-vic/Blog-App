<div>
  <div class='post-index'>
      <p>
      <img  src="<%= @user.photo %>" width="100" height="100" alt="Profile picture">
      </p>
      <div>
        <h1> <%= @user.name %> </h1>
        <span>
          <%= render layout: "shared/tag" do %>
            <p> Number of posts: <%= @user.posts_counter %> </p>
          <% end %>
        </span> 
      </div>
    <div>
      <% @posts.each do |post|%>
        <p> Post#<%= post.id%> <p>
        <div> 
          <%= render post %>
          <%= render partial: 'shared/comment', collection: post.five_last_comments %>
        </div>
      <%end%>
    </div>
  <div>
  <a>
    Pagination
  </a>
 </div>
</div>

