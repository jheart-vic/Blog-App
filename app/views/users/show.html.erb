<div>
  <div class='users'>
    <div class='img'>
      <img class="block mx-auto h-24 rounded-full sm:mx-0 sm:shrink-0" src="<%= @user.photo %>" width="100" height="100" alt="Profile picture">
    </div>
    <div class='main'>
      <div class='name'>
        <%= @user.name %>
      </div>
      <div>
        <p class='counter'>
        <%= !@user.posts_counter ? 'No post yet by this user' : "#{@user.posts_counter} post(s) has been published" %>
        </p>
      </div>
      <div class='counter'>
        Joined in <%= @user.created_at.strftime("%B, %e at %H:%M") %>
      </div>
      </div>
      </div>
      <button class='link'> <%= link_to 'New Post', new_user_post_path(@user) %> </button>
  <div class='bio'>
    <h2>Bio</h2>
    <p><%= @user.bio %></p>
  </div>
  <div class='posts'>
   <%=  render @user.show_last_three_posts %>
  </div>
  <button class='link-to-all-post'>
    <%=  link_to user_posts_path(@user) do %>
      <span>
        See all posts
      </span>
    <% end %>
  </button>
  <%= button_to "Sign out", destroy_user_session_path, method: :delete %>
</div>
